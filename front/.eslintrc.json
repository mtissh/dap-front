{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import"
  ],
  "rules": {
    "no-var": ["error"],
    "quotes": ["error", "single"],
    "jsx-quotes": [2, "prefer-single"],
    "eqeqeq": ["error"],
    "semi": ["warn"],
    "no-extra-semi": ["warn"],
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "import/order": ["error", {
      "alphabetize": {
        "order": "asc"
      }
    }]
  }
}